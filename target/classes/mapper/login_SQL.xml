<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="login">
  <select
    id="loginData"
    parameterType="hashmap"
    resultType="hashmap"
  > 
  SELECT * FROM SUCCESS_USER
  WHERE LOGIN_ID=#{id}
  AND LOGIN_PWD =(SELECT [NEOE].[FN_SUCCESS_USER](#{pw}))
  AND CD_COMPANY='SEOBU'
   <!-- SELECT * FROM SUCCESS_USER
  WHERE LOGIN_ID = #{id}
  AND login_pwd = HASHBYTES('sha1',#{pw}) -->
  </select>

</mapper>